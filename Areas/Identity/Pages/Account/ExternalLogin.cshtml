@page
@model ExternalLoginModel

@{
    ViewData["Title"] = "Đăng ký";
    Layout = "~/Areas/Identity/Pages/Shared/_LayoutIdentity.cshtml";
}

<div class="col-lg-4 col-md-4 d-flex justify-content-center align-items-center" style="height: 100vh;">
    <div class="card shadow" style="width: 400px;">
        <div class="card-body">
            <h2 class="card-title text-primary mb-3 text-center">Liên kết tài khoản @Model.ProviderDisplayName</h2>
            <hr />
            <p class="text-center text-muted">
                Bạn đã xác thực thành công với <strong>@Model.ProviderDisplayName</strong>. Vui lòng nhập email để hoàn tất đăng ký.
            </p>

            <form asp-page-handler="Confirmation" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

                <div class="mb-3">
                    <input asp-for="Input.Email" type="email" class="form-control" id="email" placeholder="Email" autocomplete="email" aria-required="true" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between">
                    <a href="/Identity/Account/Login" type="button" class="btn btn-light">Hủy</a>
                    <button type="submit" class="btn btn-primary">Đăng ký</button>
                </div>
            </form>
        </div>
    </div>
</div>
